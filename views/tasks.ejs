
<%- include('partials/header'); -%>

<form action="/tasks" class="has-background-danger" method="POST">
  
  <h1 style="font-size: 2.4em; margin-bottom: 40px; color: white; text-align: center;">New Task</h1>
    <label for="title" >Title</label>
    <input type="text" name="title" class="title">
    <label for="description">Description</label>
    <textarea name="description" id="" cols="30" rows="10" class="has-text-black pl-4" style="font-size: 25px; font-weight: 600;"></textarea>
    <button type="submit" class="taskBtn button has-text-danger" id="taskBtn" style="margin-top: 30px;font-family: monospace;">Submit</button>
  

  
</form>



